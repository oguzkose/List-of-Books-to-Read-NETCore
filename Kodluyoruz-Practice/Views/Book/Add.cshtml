@model BookViewModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>
@using (Html.BeginForm(FormMethod.Post))
{<div class="container">
        <div class="form-group row">
            @Html.LabelFor(x => x.Id, "Sıra No", new { @class = "col-md-2 col-form-label" })
            @Html.TextBoxFor(x => x.Id, null, new { @type = "number" })
            @Html.ValidationMessageFor(x => x.Id, null, new { @class = "col-md-2 text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Name, "Kitap Adı", new { @class = "col-md-2 col-form-label" })
            @Html.TextBoxFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "col-md-2 text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Author, "Yazar Adı", new { @class = "col-md-2 col-form-label" })
            @Html.TextBoxFor(x => x.Author)
            @Html.ValidationMessageFor(x => x.Author, null, new { @class = "col-md-2 text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Publisher, "Yayınevi", new { @class = "col-md-2 col-form-label" })
            @Html.TextBoxFor(x => x.Publisher, null, new { @class = "col-md-2 text-danger" })
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit">Değişiklikleri Kaydet</button>
        </div>

    </div>
}
